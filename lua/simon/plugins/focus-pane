return {
  'nvim-focus/focus.nvim',
  config = function()
    require('focus').setup {
      exclude = { 'NvimTree', 'vista', 'dbui', 'packer', 'terminal' },
      enable = true,
      cursorline = true,
      minwidth = 40, -- Force minimum width for the unfocused window

      signcolumn = true,
      number = true,
      relativenumber = true,
      hybridnumber = true,
      hybridrelativenumber = true,
      excluded_filetypes = { 'toggleterm' },
    }
  end,
}
